# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/chatbot_control_panel
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=chatbot_control_panel
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# MinIO Object Storage Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=documents
MINIO_SECURE=false

# LLM API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
USE_OPENROUTER=false
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
USE_OPENAI_EMBEDDINGS=false

# LLM Configuration
LLM_MODEL=openai/gpt-3.5-turbo
MAX_TOKENS=1500
TEMPERATURE=0.7

# OpenSearch Configuration
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=

# Text Chunking Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Vector Search Configuration
TOP_K_RESULTS=5

# ChromaDB Configuration (Vector Database)
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=chatbot_embeddings
CHROMA_PERSIST_DIRECTORY=./chroma_data
CHROMA_USE_PERSISTENT=true

# Express.js Backend Configuration
EXPRESS_API_URL=http://localhost:3000

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development
